[DEFAULT]
# List of directories to load parser definitions from (separated by ',').
# TODO(nsatterl): not supported yet
parsers_path=/opt/alerta/etc/conf.d,/usr/share/local/parsers

# Enable logging to syslog
# Default value is False
use_syslog=False

# Which syslog facility to use.
# Valid values include auth, authpriv, syslog, user0, user1...
# Default value is 'syslog'
# TODO(nsatterl): not supported yet
syslog_log_facility=syslog

# Which messages to log.
# INFO means log all usage
# ERROR means only log unsuccessful attempts
# TODO(nsatterl): not supported yet
syslog_log_level=ERROR

# Linux: /dev/log MacOS: /var/run/syslog
# TODO(nsatterl): not supported yet
syslog_address=/var/run/syslog

[alerta]


[alert-api]
version=v2
endpoint=http://127.0.0.1/alerta/api/%(version)s

[alert-syslog]


[alert-logger]