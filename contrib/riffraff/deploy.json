{
    "defaultStacks": [
        "monitoring"
    ],
    "packages": {
        "alerta": {
            "type": "rpm",
            "data": {
                "port": "8080",
                "healthcheckPaths": [
                    "/management/healthcheck"
                ],
                "services": ["httpd"],
                "serviceCommand": "reload"
            }
        },
        "alerta-extras": {
            "type": "rpm",
            "apps" : ["alerta"],
            "data": {
                "services": [
                    "alert-cloudwatch",
                    "alert-dynect",
                    "alert-ircbot",
                    "alert-logger",
                    "alert-mailer",
                    "alert-pagerduty",
                    "alert-pinger",
                    "alert-solarwinds",
                    "alert-syslog",
                    "alert-urlmon"
                ]
            }
        }
    },
    "recipes": {
        "default": {
            "depends": ["alerta", "extras"]
        },
        "alerta": {
            "actionsPerHost": ["alerta.deploy"]
        },
        "extras": {
            "actionsPerHost": ["alerta-extras.deploy"]
        }
    }
}
