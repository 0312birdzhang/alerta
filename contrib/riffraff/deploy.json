{
    "defaultStacks": [
        "monitoring"
    ],
    "packages": {
        "api": {
            "type": "rpm",
            "apps" : ["alerta"],
            "data": {
                "port": "8080",
                "healthcheck_paths": [
                    "/"
                ],
                "services": ["httpd"],
                "serviceCommand": "reload"
            }
        },
        "dashboard": {
            "type": "rpm",
            "apps" : ["alerta"],
            "data": {
                "port": "80",
                "healthcheck_paths": [
                    "/"
                ],
                "services": ["httpd"],
                "serviceCommand": "reload"
            }
        },
        "daemons": {
            "type": "rpm",
            "apps" : ["alerta"],
            "data": {
                "services": [
                    "alerta-cloudwatch",
                    "alert-dynect",
                    "alert-ircbot",
                    "alert-logger",
                    "alert-mailer",
                    "alert-pagerduty",
                    "alert-pinger",
                    "alert-solarwinds",
                    "alert-syslog",
                    "alert-urlmon"
                ]
            }
        }
    }
}
